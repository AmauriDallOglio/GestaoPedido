@model GestaoPedido.Dominio.Entidade.Cliente
@{
    ViewData["Title"] = "Incluir Cliente";
}

<div class="container mt-5">
    <div class="shadow-sm p-4 bg-white rounded">
        <form asp-controller="Cliente"
              asp-action="Incluir"
              method="post"
              class="needs-validation"
              novalidate>

            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    @TempData["MensagemErro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                </div>
            }

            <div class="text-center mb-4">
                <h1 class="display-6 text-primary">
                    <i class="bi bi-person-plus"></i> Incluir Cliente
                </h1>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome" required />
                    @Html.ValidationMessageFor(a => a.Nome, null, new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Digite o e-mail" required />
                    @Html.ValidationMessageFor(a => a.Email, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="d-flex justify-content-between gap-2">
                <a asp-controller="Cliente"
                   asp-action="Index"
                   class="btn btn-outline-secondary"
                   role="button">Cancelar</a>

                <button type="submit" class="btn btn-outline-primary">Gravar</button>
            </div>
        </form>
    </div>
</div>
