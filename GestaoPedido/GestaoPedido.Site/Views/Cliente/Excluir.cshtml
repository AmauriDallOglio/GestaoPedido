 @model GestaoPedido.Dominio.Entidade.Cliente
@{
    ViewData["Title"] = "Excluir Cliente";
}

<div class="container mt-5">
    <div class="shadow-sm p-4 bg-white rounded">
        <form asp-controller="Cliente"
              asp-action="Excluir"
              method="post"
              class="needs-validation"
              novalidate>

            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    @TempData["MensagemErro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                </div>
            }

            <div class="text-center mb-4">
                <h1 class="display-6 text-danger">
                    <i class="bi bi-trash3"></i> Confirmar Exclusão
                </h1>
                <p class="lead">Tem certeza que deseja excluir o cliente abaixo?</p>
                <p><strong>@Model.Nome</strong> (ID: @Model.Id)</p>
            </div>

            <div class="d-flex justify-content-between gap-2">
                <a asp-controller="Cliente"
                   asp-action="Index"
                   class="btn btn-outline-secondary"
                   role="button">Cancelar</a>

                <button type="submit" class="btn btn-outline-danger">Confirmar</button>
            </div>
        </form>
    </div>
</div>
