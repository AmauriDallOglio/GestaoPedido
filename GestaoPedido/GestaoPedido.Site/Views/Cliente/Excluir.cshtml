@model GestaoPedido.Dominio.Entidade.Cliente
@{
    ViewData["Title"] = "Apagar";
}

<div class="container mt-5">


    <form asp-controller="Cliente" asp-action="Excluir" method="post" class="needs-validation border rounded p-4 shadow-sm" novalidate>

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }



        <div class="text-center">
            <h1 class="display-4"> Deseja apagar o cliente? </h1>
            <p>Pedido: @Model.Nome (ID: @Model.Id)</p>
        </div>



        <div class="d-flex justify-content-between">
            <a class="btn btn-outline-secondary" asp-controller="Cliente" asp-action="Index" role="button">Cancelar</a>
            <button type="submit" class="btn btn-outline-danger">Confirmar</button>
        </div>
    </form>
</div>