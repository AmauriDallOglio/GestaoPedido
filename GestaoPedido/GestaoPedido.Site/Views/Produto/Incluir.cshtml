@model GestaoPedido.Dominio.Entidade.Produto

@{
    ViewData["Title"] = "Incluir Produto";
}

<div class="container mt-5">
    <form asp-controller="Produto"
          asp-action="Incluir"
          method="post"
          class="needs-validation border rounded p-4 shadow-sm"
          novalidate>

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="text-center mb-4">
            <h1 class="display-4">Formulário de Inserção</h1>
        </div>

        <div class="mb-3">
            <label for="nome" class="form-label">Nome:</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome" required>
            @Html.ValidationMessageFor(a => a.Nome, null, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label for="descricao" class="form-label">Descrição:</label>
            <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Digite a descrição" required></textarea>
            @Html.ValidationMessageFor(a => a.Descricao, null, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label for="preco" class="form-label">Preço:</label>
            <input type="number" asp-for="Preco" class="form-control" step="0.01" placeholder="Digite o preço" required>
            @Html.ValidationMessageFor(a => a.Preco, null, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label for="quantidade" class="form-label">Quantidade:</label>
            <input type="number" asp-for="Quantidade" class="form-control" placeholder="Digite a quantidade" required>
            @Html.ValidationMessageFor(a => a.Quantidade, null, new { @class = "text-danger" })
        </div>

@*         <div class="mb-3 form-check">
            <input type="checkbox" asp-for="Ativo" class="form-check-input">
            <label class="form-check-label" for="Ativo">Ativo</label>
        </div>

        <div class="mb-3">
            <label for="dataCadastro" class="form-label">Data de Cadastro:</label>
            <input type="date" asp-for="DataCadastro" class="form-control" required>
            @Html.ValidationMessageFor(a => a.DataCadastro, null, new { @class = "text-danger" })
        </div> *@

        <div class="d-flex justify-content-between">
            <a class="btn btn-outline-secondary"
               asp-controller="Produto"
               asp-action="Index"
               role="button">Voltar</a>

            <button type="submit" class="btn btn-outline-primary">Gravar</button>
        </div>
    </form>
</div>
