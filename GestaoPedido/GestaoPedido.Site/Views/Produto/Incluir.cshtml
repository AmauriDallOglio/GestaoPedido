@model GestaoPedido.Aplicacao.Dto.ProdutoIncluirDto

@{
    ViewData["Title"] = "Incluir Produto";
}

<div class="container mt-5">
    <div class="shadow-sm p-4 bg-white rounded">
        <form asp-controller="Produto"
              asp-action="Incluir"
              method="post"
              class="needs-validation"
              novalidate>

            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    @TempData["MensagemErro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                </div>
            }

            <div class="text-center mb-4">
                <h1 class="display-6 text-primary">
                    <i class="bi bi-box-seam"></i> Incluir Produto
                </h1>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label for="Nome" class="form-label">Nome:</label>
                    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome" required />
                    @Html.ValidationMessageFor(a => a.Nome, null, new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label for="Descricao" class="form-label">Descrição:</label>
                    <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a descrição" required />
                    @Html.ValidationMessageFor(a => a.Descricao, null, new { @class = "text-danger" })
                </div>

                <div class="col-md-4">
                    <label for="Preco" class="form-label">Preço:</label>
                    <input type="number" asp-for="Preco" class="form-control" step="0.01" placeholder="Digite o preço" required />
                    @Html.ValidationMessageFor(a => a.Preco, null, new { @class = "text-danger" })
                </div>

                <div class="col-md-4">
                    <label for="Quantidade" class="form-label">Quantidade:</label>
                    <input type="number" asp-for="Quantidade" class="form-control" placeholder="Digite a quantidade" required />
                    @Html.ValidationMessageFor(a => a.Quantidade, null, new { @class = "text-danger" })
                </div>
@* 
                <div class="col-md-4 d-flex align-items-end">
                    <div class="form-check">
                        <input type="checkbox" asp-for="Inativo" class="form-check-input" id="inativoCheck" />
                        <label class="form-check-label" for="inativoCheck">Inativo</label>
                    </div>
                </div> *@
            </div>

            <div class="d-flex justify-content-between gap-2">
                <a class="btn btn-outline-secondary"
                   asp-controller="Produto"
                   asp-action="Index"
                   role="button">Cancelar</a>

                <button type="submit" class="btn btn-outline-primary">Gravar</button>
            </div>
        </form>
    </div>
</div>
