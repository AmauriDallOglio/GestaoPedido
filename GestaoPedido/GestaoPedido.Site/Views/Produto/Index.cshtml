@using GestaoPedido.Dominio.Entidade;
@model List<Produto>
@{
    ViewData["Title"] = "Gerenciamento de Produto";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5">Gerenciamento de Produtos</h1>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Sucesso!</strong> @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Erro!</strong> @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-outline-primary" role="button"
           asp-controller="Produto"
           asp-action="Incluir">
            <i class="bi bi-plus-circle"></i> Incluir
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover" id="GridProduto">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Preco</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col">DataCadastro</th>
                    <th scope="col">Ativo</th>

 

                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var Produto in Model)
                    {
                        <tr>
                            <td>@Produto.Id</td>
                            <td>@Produto.Nome</td>
                            <td>@Produto.Preco</td>
                            <td>@Produto.Quantidade</td>
                            <td>@Produto.DataCadastro</td>
                            <td>@(Produto.Ativo ? "Sim" : "Não")</td>

                            <td class="text-center">
                                <a class="btn btn-outline-warning btn-sm"
                                   asp-route-id="@Produto.Id"
                                   asp-controller="Produto"
                                   asp-action="Editar">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                @*                 <a class="btn btn-outline-info btn-sm"
                                   asp-route-id="@Produto.Id"
                                   asp-controller="Produto"
                                   asp-action="Detalhes">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a> *@
                                <a class="btn btn-outline-danger btn-sm"
                                   asp-route-id="@Produto.Id"
                                   asp-controller="Produto"
                                   asp-action="Excluir">
                                    <i class="bi bi-trash"></i> Excluir
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">Nenhum registro encontrado.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

