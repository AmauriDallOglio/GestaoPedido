@model GestaoPedido.Dominio.Entidade.Produto

@{
    ViewData["Title"] = "Apagar";
}

<div class="container mt-5">
    <div class="shadow-sm p-4 bg-white rounded">
        <form asp-controller="Produto" asp-action="Excluir" method="post" class="needs-validation" novalidate>

            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    @TempData["MensagemErro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                </div>
            }

            <div class="text-center mb-4">
                <h1 class="display-6 text-danger">Deseja realmente apagar o produto?</h1>
                <p><strong>Nome:</strong> @Model.Nome</p>
                <p><strong>ID:</strong> @Model.Id</p>
            </div>

            <div class="d-flex justify-content-between gap-2">
                <a class="btn btn-outline-secondary"
                   asp-controller="Produto"
                   asp-action="Index"
                   role="button">Cancelar</a>

                <button type="submit" class="btn btn-outline-danger">Confirmar</button>
            </div>
        </form>
    </div>
</div>
